{
  "name": "gerenciador-financeiro",
  "version": "0.0.0",
  "scripts": {
    "start": "run-p start:*",
    "start:app": "ng serve --no-hmr --open",
    "start:server": "json-server db.json --watch --delay 500 --port 3333",
    "prestart": "node scripts/index.mjs",
    "build": "ng build",
    "build:preview": "vite preview --outDir dist/gerenciador-financeiro/browser",
    "bundle:analyzer": "ng build --stats-json --configuration production",
    "prebuild": "node scripts/generate-envs.mjs",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false",
    "lint": "npx eslint --ext js,ts,html --max-warnings 0 --config eslint.config.js",
    "lint:fix": "yarn lint --fix",
    "pretty": "prettier \"./src/**/*.{ts,js,html,css,scss}\" --write",
    "precommit": "lint-staged",
    "type:check": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "yarn lint:fix"
    ],
    "*.{js,jsx,tsx,ts,json,css,md}": [
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "20.2.14",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "20.2.14",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "chart.js": "^4.5.1",
    "ngx-mask": "^21.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "20.7.0",
    "@angular/build": "^20.3.15",
    "@angular/cli": "^20.3.15",
    "@angular/compiler-cli": "^20.3.0",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.1",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.7.0",
    "dotenv": "^17.2.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "json-server": "0.17.4",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.4"
  }
}
