{
  "name": "gerenciador-financeiro",
  "version": "0.0.0",
  "scripts": {
    "start": "ng serve --open",
    "prestart": "node scripts/generate-envs.mjs",
    "build": "ng build",
    "prebuild": "node scripts/generate-envs.mjs",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false",
    "lint": "npx eslint --ext js,ts,html --max-warnings 0 --config eslint.config.js",
    "lint:fix": "yarn lint --fix",
    "precommit": "lint-staged",
    "type:check": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "yarn lint:fix"
    ],
    "*.{js,jsx,tsx,ts,json,css,md}": "prettier --write"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "20.2.14",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "20.2.14",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "20.7.0",
    "@angular/build": "^20.3.15",
    "@angular/cli": "^20.3.15",
    "@angular/compiler-cli": "^20.3.0",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.1",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.7.0",
    "dotenv": "^17.2.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.4"
  }
}
